<h3>Add Author</h3>
<%= form_with model: @aurthor do |form| %>
  <p>Name: <%= form.text_field :name %></p>
  <p>Age: <%= form.number_field :age %></p>
  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select([['Junior', 'junior'], ['Experienced', 'experienced']]), id: :status %>
  </div>

  </div>
  <%= form.submit %>
<% end %>
